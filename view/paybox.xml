<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data noupdate="0">
        <record id="acquirer_form_paybox" model="ir.ui.view">
            <field name="name">acquirer.form.paybox</field>
            <field name="model">payment.acquirer</field>
            <field name="inherit_id" ref="payment.acquirer_form"/>
            <field name="arch" type="xml">
                <xpath expr='//group[@name="acquirer_display"]' position='after'>
                    <group attrs="{'invisible': [('provider', '!=', 'paybox')]}">
                      <field name="paybox_key"/>
                      <field name="paybox_shop_id"/>
                      <field name="paybox_rank"/>
                      <field name="paybox_site"/>
                      <field name="paybox_hash"/>
                      <field name="paybox_url"/>
                      <field name="paybox_return_url"/>
                      <field name="paybox_currency"/>
                      <field name="paybox_method"/>
                      <field name="paybox_admin_mail"/>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</openerp>
