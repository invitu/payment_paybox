<?xml version="1.0"?>
<openerp>
    <data noupdate="0">
        <record id="paybox_error_email_template" model="email.template">
            <field name="name">Warning Paybox</field>
            <field name="email_from">${user.email}</field>
            <field name="subject">Module Paybox - Warning</field>
            <field name="email_to">${object.get_paybox_admin()}</field>
            <field name="lang">${user.lang}</field>
            <field name="model_id" ref="paybox.model_paybox_warning"/>
            <field name="auto_delete" eval="True"/>
            <field name="body_html">
                Une erreur s'est produite lors de la tentative de validation d'un paiement Paybox.
  
                La facture ayant pour référence ${object.ref} 
            </field>
        </record>
    </data>
</openerp>

