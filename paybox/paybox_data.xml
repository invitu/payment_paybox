<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data noupdate="0">
        <record id="paybox_acquirer" model="portal.payment.acquirer">
            <field name="name">Paybox</field>
            <field name="form_template"><![CDATA[
<form method="POST" action="${url}">
    <input type="hidden" name="PBX_SITE" value="${site}"/>
    <input type="hidden" name="PBX_RANG" value="${rank}"/>
    <input type="hidden" name="PBX_HASH" value="${hash}"/>
    <input type="hidden" name="PBX_CMD" value="${reference}"/>
    <input type="hidden" name="PBX_IDENTIFIANT" value="${identifiant}"/>
    <input type="hidden" name="PBX_TOTAL" value="${amount}"/>
    <input type="hidden" name="PBX_DEVISE" value="${devise}"/>
    <input type="hidden" name="PBX_PORTEUR" value="${porteur}"/>
    <input type="hidden" name="PBX_RETOUR" value="${retour}"/>
    <input type="hidden" name="PBX_TIME" value="${time}"/>
    <input type="hidden" name="PBX_EFFECTUE" value="${effectue}"/>
    <input type="hidden" name="PBX_REFUSE" value="${refuse}"/>
    <input type="hidden" name="PBX_ANNULE" value="${annule}"/>
    <input type="hidden" name="PBX_REPONDRE_A" value="${ipn}"/>
    <input type="hidden" name="PBX_HMAC" value="${hmac}"/>
    <table>
        <tr>
            <td style="text-align: center; padding: 5px;"><img src="paybox/static/src/img/paiement-paybox.jpg"/></td>
        </tr>
        <tr>
            <td style="text-align: center; padding: 5px;"><input type="submit" value="Payer en ligne" style="background: none repeat scroll 0 0 #FFFFFF !important;"/></td>
        </tr>
    </table>
</form>            
]]></field>
        </record>
    </data>
</openerp>
